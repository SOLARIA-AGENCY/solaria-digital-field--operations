# SOLARIA Digital Field Operations - Environment Configuration

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
POSTGRES_DB=solaria_field_ops
POSTGRES_USER=solaria

# Application Configuration
NODE_ENV=production
PORT=3000
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4000

# Storage Configuration
MINIO_ROOT_USER=solaria_admin
MINIO_ROOT_PASSWORD=your_minio_password_here
STORAGE_ACCESS_KEY=your_storage_access_key_here
STORAGE_SECRET_KEY=your_storage_secret_key_here

# Project Configuration
PROJECT_NAME=My Construction Project
PROJECT_TYPE=residential
PROJECT_PHASE=planning
PROJECT_BUDGET=1000000
PROJECT_TIMELINE=12

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,dwg,dxf,doc,docx,xlsx,csv,jpg,png
UPLOAD_PATH=./storage/uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
NOTIFICATION_EMAIL=notifications@solaria.agency

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Development Configuration
DEV_MODE=false
DEBUG=false
MOCK_AI_RESPONSES=false